<div class="container">
  <h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li >
      <div class = "d-flex">
        <div class = "mr-3">
          <%= link_to task.title, task_path(task) %>
        </div>
        <div class = "ml-3">
        <%= link_to destroy_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
        </div>
      </div>
      </li>
    <% end %>
  </ul>
  <%= link_to "Add a new task", new_path %>
</div>
